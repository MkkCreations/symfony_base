{% extends 'base.html.twig' %}

{% block title %}Burger List{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 80%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        <h2>Burger List</h2>

        <img style="border-radius: 40px; width:100%; margin: 10px 0;" src="{{ asset('images/burger.avif') }}" alt="Burger App">

        <p>Here is a list of all the burgers in the database</p>
        <p>Click on a burger to see more details</p>
        <div>
            {% for burger in burgers %}
                <div class="card">
                    <div class="card-header">
                        {{ burger.name }}
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{burger.price}}</h5>
                        <p class="card-text">{{burger.description}}</p>
                        <a href="#" class="btn btn-primary">See details</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}